---
export interface Props {
  title?: string;
}
const { title = "My Blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <!-- Link to CSS files, fonts, etc. -->
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>My Blog</h1>
    <!-- Navigation can go here -->
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <p>&copy; 2025 My Blog</p>
  </footer>
</body>
</html>