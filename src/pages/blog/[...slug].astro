---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

// This function generates static paths for each blog post.
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id }, // Use post.id to match the route
  }));
}

type Props = CollectionEntry<'blog'>;  // Type definition for post
const post: Props = Astro.props;       // Properly typed Astro.props
---

<BlogPost {...post.data}>
  <article>
    <!-- Render the body of the post -->
    {post.body}
  </article>
</BlogPost>
