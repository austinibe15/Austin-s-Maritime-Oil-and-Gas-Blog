---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

// This function generates static paths for each blog post.
export async function getStaticPaths() {
  const posts = await getCollection('blog');  // Fetch all blog posts
  return posts.map((post) => ({
    params: { slug: post.slug },  // Use post.slug instead of post.id
  }));
}

type Props = CollectionEntry<'blog'>;  // Type definition for post
const post: Props = Astro.props;       // Properly typed Astro.props
---

<BlogPost {...post.data}>
  <article>
    <!-- Render the body of the post -->
    {post.body}  <!-- Render the body of the post here -->
  </article>
</BlogPost>
